#menutop
  %ul
    %li.soc_button
      = link_to "http://twitter.com/alianciaFP" do
        = image_tag 'twitter.png'
      = link_to 'http://www.facebook.com/pages/Datanest-Aliancie-Fair-play/151055951576439' do
        = image_tag 'facebook.png'
    %li /

    - if logged_in?
      - I18N_LOCALES.each do |locale|
        %li= link_to_unless I18n.locale == locale, I18N_LOCALE_NAMES[locale], set_locale_path(:locale => locale.to_s), :class => "forward_hash"
        %li /

      %li= link_to t("global.logout"), logout_path
      %li /

      %li= link_to t("users.my_account"), account_path
      %li /

      %li= current_user
    - else
      %li= link_to t("global.login"), new_session_path
      %li /

      %li= link_to t("users.register"), new_account_path



