- if @search_predicates
  %p.notice
    = link_to(image_tag("tooltip_cancel.png"), params.except(:search_id))
    - if @sphinx_single_negative_search
      = t('.sphinx_single_negative_search')
    - else
      = t(".active_search", :predicates => @search_predicates.count)
    %a{:href => '#', :onclick => '$("#searchline-container .advanced").trigger("click").focus(); return false;'}= t("dataset.edit_search")
