%li[field_description]
  %div
    .fl.hidden.nopadding= image_tag 'icons/drag_arrow.png', :class => 'drag_arrow'
    .span-5
      - unless field_description.exists_in_database?
        = link_to(image_tag("icons/error.png"), datastore_status_dataset_description_path(dataset_description))
      = link_to field_description.title, edit_dataset_description_field_description_path(dataset_description, field_description)
    .span-5= field_description.description.to_s.empty? ? 'n/a' : field_description.description
    .span-3= field_description.data_type
    .span-4= field_description.identifier
    .fr= link_to(image_tag('icons/trash.gif'),
                      dataset_description_field_description_path(dataset_description, field_description),
                      method: 'delete',
                      confirm: t("global.delete_confirmation"),
                      title: t("global.delete"))
    .clear

